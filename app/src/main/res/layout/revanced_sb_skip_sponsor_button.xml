<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:yt="http://schemas.android.com/apk/res-auto"
    android:id="@+id/revanced_sb_skip_sponsor_button_container"
    android:layout_width="wrap_content"
    android:layout_height="32dp"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp">

    <!--suppress AndroidUnresolvableTag -->
    <com.google.android.libraries.youtube.common.ui.YouTubeTextView
        android:id="@+id/revanced_sb_skip_sponsor_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:includeFontPadding="false"
        android:paddingLeft="6dp"
        android:paddingRight="4dp"
        android:singleLine="true"
        android:text="@string/revanced_sb_skip_button_compact"
        android:textColor="#ffff"
        android:textSize="12sp"
        tools:ignore="MissingClass" />

    <ImageView
        android:id="@+id/revanced_sb_skip_sponsor_button_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:alpha="0.8"
        android:contentDescription="@null"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:src="@drawable/quantum_ic_skip_next_white" />
</LinearLayout>